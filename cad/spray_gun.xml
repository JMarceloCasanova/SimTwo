<?xml version="1.0" ?>

<robot>

  <solids>
  
    <cuboid>
      <ID value='Basegun'/>
      <mass value='0.001'/>
      <size x='0.02' y='0.04' z='0.08'/>

      <pos x='0' y='0' z='0.04'/>
      <rot_deg x='0' y='70' z='0'/>
      <color_rgb r='150' g='150' b='150'/>
    </cuboid>

  </solids>

  <sensors>

    <spraygun>
      <absolute_coords/>
      <beam length='0.5' initial_width='0' final_width='0.1'/>
      <pos x='0' y='0' z='0.04'/>
      <rot_deg x='0' y='70' z='0'/>
      <color_rgb r='200' g='0' b='0'/>
      <paint_color_rgb r='0' g='100' b='255'/>
      <paint_rate value='0.0000033'/>  <!-- m^3/s = 1000L/s
               200ml/minuto = 0.0002m^3/min = -->
      <paint_default_on value='true'/>
    </spraygun>

  </sensors>
     
</robot>
    
    
